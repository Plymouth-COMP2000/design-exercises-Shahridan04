<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/content_background_pattern">

    <!-- Header -->
    <View
        android:id="@+id/header_background"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/header_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/our_menu"
        android:textAppearance="@style/TextAppearance.App.Headline"
        android:textColor="@color/text_on_primary"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/spacing_medium"
        app:layout_constraintTop_toTopOf="@id/header_background"
        app:layout_constraintBottom_toBottomOf="@id/header_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_search" />

    <TextView
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”"
        android:textSize="24sp"
        android:textColor="@color/text_on_primary"
        android:padding="@dimen/spacing_medium"
        app:layout_constraintTop_toTopOf="@id/header_background"
        app:layout_constraintBottom_toBottomOf="@id/header_background"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Search Bar -->
    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="@string/search_hint"
        android:paddingStart="@dimen/spacing_medium"
        android:paddingEnd="@dimen/spacing_medium"
        android:background="@drawable/input_background_visible"
        android:textAppearance="@style/TextAppearance.App.Body"
        android:inputType="text"
        android:layout_margin="@dimen/spacing_medium"
        app:layout_constraintTop_toBottomOf="@id/header_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.95" />

    <!-- Browse by Category -->
    <TextView
        android:id="@+id/tv_browse_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/browse_by_category"
        android:textAppearance="@style/TextAppearance.App.Body"
        android:paddingStart="@dimen/spacing_medium"
        android:paddingEnd="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_small"
        app:layout_constraintTop_toBottomOf="@id/et_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.95" />

    <!-- Category Filters -->
    <HorizontalScrollView
        android:id="@+id/category_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingStart="@dimen/spacing_medium"
        android:paddingEnd="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_small"
        app:layout_constraintTop_toBottomOf="@id/tv_browse_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_filter_all"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_small"
                android:text="@string/all"
                android:background="@drawable/button_accent"
                android:textColor="@color/text_on_primary"
                android:textSize="@dimen/text_size_secondary"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:minWidth="80dp"
                android:layout_marginEnd="@dimen/spacing_tiny" />

            <Button
                android:id="@+id/btn_filter_starters"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_small"
                android:text="@string/starters"
                android:background="@drawable/input_background"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_secondary"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:minWidth="80dp"
                android:layout_marginEnd="@dimen/spacing_tiny" />

            <Button
                android:id="@+id/btn_filter_mains"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_small"
                android:text="@string/mains"
                android:background="@drawable/input_background"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_secondary"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:minWidth="80dp"
                android:layout_marginEnd="@dimen/spacing_tiny" />

            <Button
                android:id="@+id/btn_filter_drinks"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_small"
                android:text="@string/drinks"
                android:background="@drawable/input_background"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_secondary"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:minWidth="80dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Menu Items RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_menu_items"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="@dimen/spacing_medium"
        android:paddingBottom="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_medium"
        app:layout_constraintTop_toBottomOf="@id/category_scroll"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Navigation Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_nav_height"
        android:background="@drawable/bottom_nav_background"
        android:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/home"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.App.Secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/nav_menu"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/nav_menu"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/menu"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.App.Secondary"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:background="@drawable/nav_item_selected"
            android:layout_margin="@dimen/spacing_tiny"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/nav_home"
            app:layout_constraintEnd_toStartOf="@id/nav_bookings"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/nav_bookings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/bookings"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.App.Secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/nav_menu"
            app:layout_constraintEnd_toStartOf="@id/nav_profile"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Profile"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.App.Secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/nav_bookings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.25" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

