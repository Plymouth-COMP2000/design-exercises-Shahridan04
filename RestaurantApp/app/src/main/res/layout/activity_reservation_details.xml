<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/content_background_pattern">

    <!-- Header -->
    <View
        android:id="@+id/header_background"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/header_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/btn_back"
        android:layout_width="93dp"
        android:layout_height="51dp"
        android:background="@android:color/transparent"
        android:gravity="start|center_vertical"
        android:padding="@dimen/spacing_medium"
        android:text="â† Back"
        android:textAppearance="@style/TextAppearance.App.Body"
        android:textColor="@color/text_on_primary"
        app:layout_constraintBottom_toBottomOf="@id/header_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/header_background" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/details"
        android:textAppearance="@style/TextAppearance.App.Headline"
        android:textColor="@color/text_on_primary"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/header_background"
        app:layout_constraintBottom_toBottomOf="@id/header_background"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintEnd_toStartOf="@id/spacer_right" />

    <!-- Spacer to balance the header -->
    <View
        android:id="@+id/spacer_right"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@id/header_background"
        app:layout_constraintBottom_toBottomOf="@id/header_background"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/spacing_medium"
        app:layout_constraintTop_toBottomOf="@id/header_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_medium">

            <!-- Guest Name Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_guest_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/radius_xlarge"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="@color/primary"
                android:layout_marginTop="@dimen/spacing_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.95">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_large">

                    <TextView
                        android:id="@+id/tv_guest_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Sarah Lee"
                        android:textAppearance="@style/TextAppearance.App.Title"
                        android:textColor="@color/text_on_primary"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tv_reservation_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="#RES-20251107-001"
                        android:textAppearance="@style/TextAppearance.App.Secondary"
                        android:textColor="@color/primary_light"
                        android:layout_marginTop="@dimen/spacing_micro"
                        app:layout_constraintTop_toBottomOf="@id/tv_guest_name"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Date & Time Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_datetime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/radius_large"
                app:cardElevation="@dimen/card_elevation"
                android:layout_marginTop="@dimen/spacing_medium"
                app:layout_constraintTop_toBottomOf="@id/card_guest_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.95">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_medium">

                    <TextView
                        android:id="@+id/tv_datetime_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/date_time"
                        android:textAppearance="@style/TextAppearance.App.Caption"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tv_datetime_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="November 7, 2015 at 7:30 PM"
                        android:textAppearance="@style/TextAppearance.App.Body"
                        android:layout_marginTop="@dimen/spacing_tiny"
                        app:layout_constraintTop_toBottomOf="@id/tv_datetime_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Party Size & Table in Row -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_party_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/radius_large"
                app:cardElevation="@dimen/card_elevation"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_tiny"
                app:layout_constraintTop_toBottomOf="@id/card_datetime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_table"
                app:layout_constraintWidth_percent="0.465">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_medium">

                    <TextView
                        android:id="@+id/tv_party_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/party_size"
                        android:textAppearance="@style/TextAppearance.App.Caption"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tv_party_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="4 guests"
                        android:textAppearance="@style/TextAppearance.App.Body"
                        android:layout_marginTop="@dimen/spacing_tiny"
                        app:layout_constraintTop_toBottomOf="@id/tv_party_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_table"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/radius_large"
                app:cardElevation="@dimen/card_elevation"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginStart="@dimen/spacing_tiny"
                app:layout_constraintTop_toBottomOf="@id/card_datetime"
                app:layout_constraintStart_toEndOf="@id/card_party_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.465">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_medium">

                    <TextView
                        android:id="@+id/tv_table_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/table_assigned"
                        android:textAppearance="@style/TextAppearance.App.Caption"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tv_table_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Table 12"
                        android:textAppearance="@style/TextAppearance.App.Body"
                        android:layout_marginTop="@dimen/spacing_tiny"
                        app:layout_constraintTop_toBottomOf="@id/tv_table_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Contact Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/radius_large"
                app:cardElevation="@dimen/card_elevation"
                android:layout_marginTop="@dimen/spacing_medium"
                app:layout_constraintTop_toBottomOf="@id/card_party_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.95">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_medium">

                    <TextView
                        android:id="@+id/tv_contact_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/contact"
                        android:textAppearance="@style/TextAppearance.App.Caption"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tv_contact_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“§ sarah.lee@email.com"
                        android:textAppearance="@style/TextAppearance.App.Body"
                        android:textColor="@color/primary"
                        android:layout_marginTop="@dimen/spacing_tiny"
                        app:layout_constraintTop_toBottomOf="@id/tv_contact_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tv_contact_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ž +60 12-555-7890"
                        android:textAppearance="@style/TextAppearance.App.Body"
                        android:textColor="@color/primary"
                        android:layout_marginTop="@dimen/spacing_micro"
                        app:layout_constraintTop_toBottomOf="@id/tv_contact_email"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Special Requests Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_special_requests"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/radius_large"
                app:cardElevation="@dimen/card_elevation"
                android:layout_marginTop="@dimen/spacing_medium"
                app:layout_constraintTop_toBottomOf="@id/card_contact"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.95">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_medium">

                    <TextView
                        android:id="@+id/tv_requests_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/special_requests"
                        android:textAppearance="@style/TextAppearance.App.Caption"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tv_request_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Window seat preferred."
                        android:textAppearance="@style/TextAppearance.App.Body"
                        android:layout_marginTop="@dimen/spacing_tiny"
                        app:layout_constraintTop_toBottomOf="@id/tv_requests_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tv_request_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Birthday celebration - please prepare dessert with candles."
                        android:textAppearance="@style/TextAppearance.App.Body"
                        android:layout_marginTop="@dimen/spacing_micro"
                        app:layout_constraintTop_toBottomOf="@id/tv_request_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Cancel Reservation Button -->
            <Button
                android:id="@+id/btn_cancel_reservation"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:text="@string/cancel_reservation"
                android:background="@drawable/button_error"
                android:textColor="@color/text_on_primary"
                android:textSize="@dimen/text_size_body"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="true"
                android:elevation="@dimen/card_elevation"
                android:layout_marginTop="@dimen/spacing_xlarge"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:layout_constraintTop_toBottomOf="@id/card_special_requests"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.95" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
