<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/content_background_pattern">

    <!-- Header -->
    <View
        android:id="@+id/header_background"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/header_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/btn_back"
        android:layout_width="99dp"
        android:layout_height="63dp"
        android:background="@android:color/transparent"
        android:gravity="start|center_vertical"
        android:padding="@dimen/spacing_medium"
        android:text="â† Back"
        android:textAppearance="@style/TextAppearance.App.Body"
        android:textColor="@color/text_on_primary"
        app:layout_constraintBottom_toBottomOf="@id/header_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/header_background" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="346dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/add_item"
        android:textAppearance="@style/TextAppearance.App.Headline"
        android:textColor="@color/text_on_primary"
        app:layout_constraintBottom_toBottomOf="@id/header_background"
        app:layout_constraintEnd_toStartOf="@id/spacer_right"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintTop_toTopOf="@id/header_background" />

    <!-- Spacer to balance the header -->
    <View
        android:id="@+id/spacer_right"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@id/header_background"
        app:layout_constraintBottom_toBottomOf="@id/header_background"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_large">

            <!-- Image Upload Area -->
                <FrameLayout
                    android:id="@+id/image_upload_area"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:background="@drawable/upload_area_background"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.95">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“·"
                            android:textSize="48sp"
                            android:layout_marginBottom="@dimen/spacing_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tap_to_upload"
                            android:textAppearance="@style/TextAppearance.App.Body"
                            android:textColor="@color/text_secondary"
                            android:gravity="center" />
                    </LinearLayout>
                </FrameLayout>

            <!-- Item Name Label -->
            <TextView
                android:id="@+id/tv_item_name_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/item_name"
                android:textAppearance="@style/TextAppearance.App.Secondary"
                android:layout_marginTop="@dimen/spacing_large"
                app:layout_constraintTop_toBottomOf="@id/image_upload_area"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.95" />

            <!-- Item Name Input -->
                <EditText
                    android:id="@+id/et_item_name"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/input_height"
                    android:background="@drawable/input_background_visible"
                    android:paddingStart="@dimen/spacing_medium"
                    android:paddingEnd="@dimen/spacing_medium"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:inputType="text"
                    android:hint="Enter item name"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    app:layout_constraintTop_toBottomOf="@id/tv_item_name_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.95" />

            <!-- Price Label -->
                <TextView
                    android:id="@+id/tv_price_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/price_rm"
                    android:textAppearance="@style/TextAppearance.App.Secondary"
                    android:layout_marginTop="@dimen/spacing_medium"
                    app:layout_constraintTop_toBottomOf="@id/et_item_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.95" />

            <!-- Price Input -->
                <EditText
                    android:id="@+id/et_price"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/input_height"
                    android:background="@drawable/input_background_visible"
                    android:paddingStart="@dimen/spacing_medium"
                    android:paddingEnd="@dimen/spacing_medium"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:inputType="numberDecimal"
                    android:hint="0.00"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    app:layout_constraintTop_toBottomOf="@id/tv_price_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.95" />

            <!-- Category Label -->
            <TextView
                android:id="@+id/tv_category_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textAppearance="@style/TextAppearance.App.Secondary"
                android:layout_marginTop="@dimen/spacing_medium"
                app:layout_constraintTop_toBottomOf="@id/et_price"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.95" />

            <!-- Category Selector -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/category_selector"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/input_height"
                    android:background="@drawable/input_background_visible"
                    android:paddingStart="@dimen/spacing_medium"
                    android:paddingEnd="@dimen/spacing_medium"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    app:layout_constraintTop_toBottomOf="@id/tv_category_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.95">

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/select"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_hint"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_dropdown_icon" />

                <TextView
                    android:id="@+id/tv_dropdown_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â–¼"
                    android:textSize="@dimen/text_size_caption"
                    android:textColor="@color/text_hint"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Description Label -->
            <TextView
                android:id="@+id/tv_description_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textAppearance="@style/TextAppearance.App.Secondary"
                android:layout_marginTop="@dimen/spacing_medium"
                app:layout_constraintTop_toBottomOf="@id/category_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.95" />

            <!-- Description Input -->
                <EditText
                    android:id="@+id/et_description"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:background="@drawable/input_background_visible"
                    android:padding="@dimen/spacing_medium"
                    android:gravity="top|start"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:hint="Enter item description"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    app:layout_constraintTop_toBottomOf="@id/tv_description_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.95" />

            <!-- Save Item Button -->
            <Button
                android:id="@+id/btn_save_item"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:text="@string/save_item"
                android:background="@drawable/button_accent"
                android:textColor="@color/text_on_primary"
                android:textSize="@dimen/text_size_body"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:elevation="@dimen/card_elevation"
                android:layout_marginTop="@dimen/spacing_xlarge"
                app:layout_constraintTop_toBottomOf="@id/et_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.95" />

            <!-- Cancel Button -->
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:text="@string/cancel"
                android:background="@drawable/input_background"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_body"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_large"
                app:layout_constraintTop_toBottomOf="@id/btn_save_item"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.95" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
