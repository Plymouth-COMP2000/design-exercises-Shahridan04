<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_medium"
    android:layout_marginEnd="@dimen/spacing_medium"
    android:layout_marginTop="@dimen/spacing_small"
    android:layout_marginBottom="@dimen/spacing_small"
    app:cardCornerRadius="@dimen/radius_large"
    app:cardElevation="@dimen/card_elevation"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_medium">

        <View
            android:id="@+id/indicator_status"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/accent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmed"
            android:textAppearance="@style/TextAppearance.App.Caption"
            android:textColor="@color/accent"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:background="@color/accent_light"
            android:paddingStart="@dimen/spacing_tiny"
            android:paddingEnd="@dimen/spacing_tiny"
            android:paddingTop="@dimen/spacing_micro"
            android:paddingBottom="@dimen/spacing_micro"
            android:layout_marginStart="@dimen/spacing_small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_date_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tomorrow"
            android:textAppearance="@style/TextAppearance.App.Body"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_tiny"
            app:layout_constraintTop_toBottomOf="@id/tv_status"
            app:layout_constraintStart_toEndOf="@id/indicator_status"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_date_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="November 10, 2025"
            android:textAppearance="@style/TextAppearance.App.Secondary"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_micro"
            app:layout_constraintTop_toBottomOf="@id/tv_date_label"
            app:layout_constraintStart_toEndOf="@id/indicator_status"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="6:30 PM"
            android:textAppearance="@style/TextAppearance.App.Body"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_micro"
            app:layout_constraintTop_toBottomOf="@id/tv_date_value"
            app:layout_constraintStart_toEndOf="@id/indicator_status"
            app:layout_constraintEnd_toStartOf="@id/tv_party" />

        <TextView
            android:id="@+id/tv_party"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Party of 4"
            android:textAppearance="@style/TextAppearance.App.Body"
            android:textStyle="bold"
            android:textColor="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/tv_date_value"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_details_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tap_for_details"
            android:textAppearance="@style/TextAppearance.App.Caption"
            android:textColor="@color/text_hint"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_tiny"
            app:layout_constraintTop_toBottomOf="@id/tv_time"
            app:layout_constraintStart_toEndOf="@id/indicator_status"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

