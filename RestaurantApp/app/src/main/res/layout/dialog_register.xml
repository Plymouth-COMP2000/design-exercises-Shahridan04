<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Username -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textAppearance="@style/TextAppearance.App.Secondary"
            android:layout_marginTop="@dimen/spacing_small" />

        <EditText
            android:id="@+id/et_reg_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:hint="Enter username"
            android:background="@drawable/input_background_visible"
            android:paddingStart="@dimen/spacing_medium"
            android:paddingEnd="@dimen/spacing_medium"
            android:textAppearance="@style/TextAppearance.App.Body"
            android:inputType="text"
            android:layout_marginTop="@dimen/spacing_tiny" />

        <!-- Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textAppearance="@style/TextAppearance.App.Secondary"
            android:layout_marginTop="@dimen/spacing_small" />

        <EditText
            android:id="@+id/et_reg_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:hint="Enter password"
            android:background="@drawable/input_background_visible"
            android:paddingStart="@dimen/spacing_medium"
            android:paddingEnd="@dimen/spacing_medium"
            android:textAppearance="@style/TextAppearance.App.Body"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/spacing_tiny" />

        <!-- First Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/first_name"
            android:textAppearance="@style/TextAppearance.App.Secondary"
            android:layout_marginTop="@dimen/spacing_small" />

        <EditText
            android:id="@+id/et_reg_firstname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:hint="Enter first name"
            android:background="@drawable/input_background_visible"
            android:paddingStart="@dimen/spacing_medium"
            android:paddingEnd="@dimen/spacing_medium"
            android:textAppearance="@style/TextAppearance.App.Body"
            android:inputType="textPersonName"
            android:layout_marginTop="@dimen/spacing_tiny" />

        <!-- Last Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/last_name"
            android:textAppearance="@style/TextAppearance.App.Secondary"
            android:layout_marginTop="@dimen/spacing_small" />

        <EditText
            android:id="@+id/et_reg_lastname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:hint="Enter last name"
            android:background="@drawable/input_background_visible"
            android:paddingStart="@dimen/spacing_medium"
            android:paddingEnd="@dimen/spacing_medium"
            android:textAppearance="@style/TextAppearance.App.Body"
            android:inputType="textPersonName"
            android:layout_marginTop="@dimen/spacing_tiny" />

        <!-- Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textAppearance="@style/TextAppearance.App.Secondary"
            android:layout_marginTop="@dimen/spacing_small" />

        <EditText
            android:id="@+id/et_reg_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:hint="Enter email"
            android:background="@drawable/input_background_visible"
            android:paddingStart="@dimen/spacing_medium"
            android:paddingEnd="@dimen/spacing_medium"
            android:textAppearance="@style/TextAppearance.App.Body"
            android:inputType="textEmailAddress"
            android:layout_marginTop="@dimen/spacing_tiny" />

        <!-- Contact -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textAppearance="@style/TextAppearance.App.Secondary"
            android:layout_marginTop="@dimen/spacing_small" />

        <EditText
            android:id="@+id/et_reg_contact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:hint="Enter phone number"
            android:background="@drawable/input_background_visible"
            android:paddingStart="@dimen/spacing_medium"
            android:paddingEnd="@dimen/spacing_medium"
            android:textAppearance="@style/TextAppearance.App.Body"
            android:inputType="phone"
            android:layout_marginTop="@dimen/spacing_tiny" />

        <!-- User Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Type"
            android:textAppearance="@style/TextAppearance.App.Secondary"
            android:layout_marginTop="@dimen/spacing_small" />

        <RadioGroup
            android:id="@+id/rg_reg_usertype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_tiny">

            <RadioButton
                android:id="@+id/rb_reg_staff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/staff"
                android:textAppearance="@style/TextAppearance.App.Body"
                android:buttonTint="@color/primary" />

            <RadioButton
                android:id="@+id/rb_reg_student"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/guest"
                android:textAppearance="@style/TextAppearance.App.Body"
                android:buttonTint="@color/primary" />
        </RadioGroup>

    </LinearLayout>
</ScrollView>

