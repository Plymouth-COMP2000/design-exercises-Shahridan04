<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/content_background_pattern">

    <!-- Header with gradient background -->
    <View
        android:id="@+id/header_background"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/header_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â† Back"
        android:textAppearance="@style/TextAppearance.App.Body"
        android:textColor="@color/text_on_primary"
        android:background="@android:color/transparent"
        android:padding="@dimen/spacing_medium"
        app:layout_constraintTop_toTopOf="@id/header_background"
        app:layout_constraintBottom_toBottomOf="@id/header_background"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/menu_list"
        android:textAppearance="@style/TextAppearance.App.Headline"
        android:textColor="@color/text_on_primary"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/header_background"
        app:layout_constraintBottom_toBottomOf="@id/header_background"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintEnd_toStartOf="@id/btn_add" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="@string/add_new_item"
        android:textSize="@dimen/text_size_secondary"
        android:textColor="@color/text_on_primary"
        android:background="@drawable/button_accent"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="false"
        android:paddingStart="@dimen/spacing_medium"
        android:paddingEnd="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_small"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="@id/header_background"
        app:layout_constraintBottom_toBottomOf="@id/header_background"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Search Bar -->
    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="@string/search_hint"
        android:paddingStart="@dimen/spacing_medium"
        android:paddingEnd="@dimen/spacing_medium"
        android:background="@drawable/input_background_visible"
        android:textAppearance="@style/TextAppearance.App.Body"
        android:inputType="text"
        android:layout_margin="@dimen/spacing_medium"
        app:layout_constraintTop_toBottomOf="@id/header_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.95" />

    <!-- Filter Chips -->
    <HorizontalScrollView
        android:id="@+id/filter_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingStart="@dimen/spacing_medium"
        android:paddingEnd="@dimen/spacing_medium"
        app:layout_constraintTop_toBottomOf="@id/et_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_filter_all"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_small"
                android:text="@string/all"
                android:background="@drawable/button_primary"
                android:textColor="@color/text_on_primary"
                android:textSize="@dimen/text_size_secondary"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:minWidth="80dp"
                android:layout_marginEnd="@dimen/spacing_tiny" />

            <Button
                android:id="@+id/btn_filter_starters"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_small"
                android:text="@string/starters"
                android:background="@drawable/input_background"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_secondary"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:minWidth="80dp"
                android:layout_marginEnd="@dimen/spacing_tiny" />

            <Button
                android:id="@+id/btn_filter_mains"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_small"
                android:text="@string/mains"
                android:background="@drawable/input_background"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_secondary"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:minWidth="80dp"
                android:layout_marginEnd="@dimen/spacing_tiny" />

            <Button
                android:id="@+id/btn_filter_desserts"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_small"
                android:text="@string/desserts"
                android:background="@drawable/input_background"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_secondary"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:minWidth="80dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Menu Items List -->
    <ScrollView
        android:id="@+id/menu_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_medium"
        app:layout_constraintTop_toBottomOf="@id/filter_container"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/spacing_medium"
            android:paddingEnd="@dimen/spacing_medium">

            <!-- Menu Item 1: Caesar Salad -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_menu_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/radius_large"
                app:cardElevation="@dimen/card_elevation"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="1.0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_medium">

                    <FrameLayout
                        android:id="@+id/img_menu_1"
                        android:layout_width="@dimen/menu_image_size"
                        android:layout_height="@dimen/menu_image_size"
                        android:background="@drawable/image_placeholder"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¥—"
                            android:textSize="32sp"
                            android:layout_gravity="center" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_menu_1_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Caesar Salad"
                        android:textAppearance="@style/TextAppearance.App.Body"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/spacing_small"
                        app:layout_constraintTop_toTopOf="@id/img_menu_1"
                        app:layout_constraintStart_toEndOf="@id/img_menu_1"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tv_menu_1_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="RM 18.00"
                        android:textAppearance="@style/TextAppearance.App.Secondary"
                        android:textColor="@color/primary"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:layout_marginTop="@dimen/spacing_micro"
                        app:layout_constraintTop_toBottomOf="@id/tv_menu_1_name"
                        app:layout_constraintStart_toEndOf="@id/img_menu_1"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Action Buttons Row -->
                    <Button
                        android:id="@+id/btn_edit_1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_small"
                        android:text="@string/edit"
                        android:background="@drawable/button_accent"
                        android:textColor="@color/text_on_primary"
                        android:textSize="@dimen/text_size_secondary"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="false"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:layout_marginEnd="@dimen/spacing_tiny"
                        app:layout_constraintTop_toBottomOf="@id/img_menu_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btn_del_1"
                        app:layout_constraintWidth_percent="0.48" />

                    <Button
                        android:id="@+id/btn_del_1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_small"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:background="@drawable/button_error"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/del"
                        android:textAllCaps="false"
                        android:textColor="@color/text_on_primary"
                        android:textSize="@dimen/text_size_secondary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/btn_edit_1"
                        app:layout_constraintTop_toBottomOf="@id/img_menu_1"
                        app:layout_constraintWidth_percent="0.48" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Menu Item 2: Grilled Salmon -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_menu_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/radius_large"
                app:cardElevation="@dimen/card_elevation"
                android:layout_marginTop="@dimen/spacing_small"
                app:layout_constraintTop_toBottomOf="@id/card_menu_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="1.0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_medium">

                    <FrameLayout
                        android:id="@+id/img_menu_2"
                        android:layout_width="@dimen/menu_image_size"
                        android:layout_height="@dimen/menu_image_size"
                        android:background="@drawable/image_placeholder"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŸ"
                            android:textSize="32sp"
                            android:layout_gravity="center" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_menu_2_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Grilled Salmon"
                        android:textAppearance="@style/TextAppearance.App.Body"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/spacing_small"
                        app:layout_constraintTop_toTopOf="@id/img_menu_2"
                        app:layout_constraintStart_toEndOf="@id/img_menu_2"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tv_menu_2_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="RM 45.00"
                        android:textAppearance="@style/TextAppearance.App.Secondary"
                        android:textColor="@color/primary"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:layout_marginTop="@dimen/spacing_micro"
                        app:layout_constraintTop_toBottomOf="@id/tv_menu_2_name"
                        app:layout_constraintStart_toEndOf="@id/img_menu_2"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Action Buttons Row -->
                    <Button
                        android:id="@+id/btn_edit_2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_small"
                        android:text="@string/edit"
                        android:background="@drawable/button_accent"
                        android:textColor="@color/text_on_primary"
                        android:textSize="@dimen/text_size_secondary"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="false"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:layout_marginEnd="@dimen/spacing_tiny"
                        app:layout_constraintTop_toBottomOf="@id/img_menu_2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btn_del_2"
                        app:layout_constraintWidth_percent="0.48" />

                    <Button
                        android:id="@+id/btn_del_2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_small"
                        android:text="@string/del"
                        android:background="@drawable/button_error"
                        android:textColor="@color/text_on_primary"
                        android:textSize="@dimen/text_size_secondary"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="false"
                        android:layout_marginTop="@dimen/spacing_small"
                        app:layout_constraintTop_toBottomOf="@id/img_menu_2"
                        app:layout_constraintStart_toEndOf="@id/btn_edit_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintWidth_percent="0.48" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Menu Item 3: Chocolate Cake -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_menu_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/radius_large"
                app:cardElevation="@dimen/card_elevation"
                android:layout_marginTop="@dimen/spacing_small"
                app:layout_constraintTop_toBottomOf="@id/card_menu_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="1.0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_medium">

                    <FrameLayout
                        android:id="@+id/img_menu_3"
                        android:layout_width="@dimen/menu_image_size"
                        android:layout_height="@dimen/menu_image_size"
                        android:background="@drawable/image_placeholder"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ°"
                            android:textSize="32sp"
                            android:layout_gravity="center" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_menu_3_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Chocolate Cake"
                        android:textAppearance="@style/TextAppearance.App.Body"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/spacing_small"
                        app:layout_constraintTop_toTopOf="@id/img_menu_3"
                        app:layout_constraintStart_toEndOf="@id/img_menu_3"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tv_menu_3_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="RM 22.00"
                        android:textAppearance="@style/TextAppearance.App.Secondary"
                        android:textColor="@color/primary"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:layout_marginTop="@dimen/spacing_micro"
                        app:layout_constraintTop_toBottomOf="@id/tv_menu_3_name"
                        app:layout_constraintStart_toEndOf="@id/img_menu_3"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Action Buttons Row -->
                    <Button
                        android:id="@+id/btn_edit_3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_small"
                        android:text="@string/edit"
                        android:background="@drawable/button_accent"
                        android:textColor="@color/text_on_primary"
                        android:textSize="@dimen/text_size_secondary"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="false"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:layout_marginEnd="@dimen/spacing_tiny"
                        app:layout_constraintTop_toBottomOf="@id/img_menu_3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btn_del_3"
                        app:layout_constraintWidth_percent="0.48" />

                    <Button
                        android:id="@+id/btn_del_3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_small"
                        android:text="@string/del"
                        android:background="@drawable/button_error"
                        android:textColor="@color/text_on_primary"
                        android:textSize="@dimen/text_size_secondary"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="false"
                        android:layout_marginTop="@dimen/spacing_small"
                        app:layout_constraintTop_toBottomOf="@id/img_menu_3"
                        app:layout_constraintStart_toEndOf="@id/btn_edit_3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintWidth_percent="0.48" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_nav_height"
        android:background="@drawable/bottom_nav_background"
        android:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/home"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.App.Secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/nav_menu"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/nav_menu"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/menu"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.App.Secondary"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:background="@drawable/nav_item_selected"
            android:layout_margin="@dimen/spacing_tiny"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/nav_home"
            app:layout_constraintEnd_toStartOf="@id/nav_bookings"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/nav_bookings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/bookings"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.App.Secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/nav_menu"
            app:layout_constraintEnd_toStartOf="@id/nav_settings"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/nav_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/settings"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.App.Secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/nav_bookings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.25" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
