<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_medium"
    android:layout_marginEnd="@dimen/spacing_medium"
    android:layout_marginBottom="@dimen/spacing_small"
    app:cardCornerRadius="@dimen/radius_large"
    app:cardElevation="@dimen/card_elevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_medium">

        <FrameLayout
            android:id="@+id/img_menu_item"
            android:layout_width="@dimen/menu_image_size"
            android:layout_height="@dimen/menu_image_size"
            android:background="@drawable/image_placeholder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ½ï¸"
                android:textSize="32sp"
                android:layout_gravity="center" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textAppearance="@style/TextAppearance.App.Body"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/spacing_small"
            app:layout_constraintTop_toTopOf="@id/img_menu_item"
            app:layout_constraintStart_toEndOf="@id/img_menu_item"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_item_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="RM 0.00"
            android:textAppearance="@style/TextAppearance.App.Secondary"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_micro"
            app:layout_constraintTop_toBottomOf="@id/tv_item_name"
            app:layout_constraintStart_toEndOf="@id/img_menu_item"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Action Buttons Row -->
        <Button
            android:id="@+id/btn_edit"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_small"
            android:text="@string/edit"
            android:background="@drawable/button_accent"
            android:textColor="@color/text_on_primary"
            android:textSize="@dimen/text_size_secondary"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginEnd="@dimen/spacing_tiny"
            app:layout_constraintTop_toBottomOf="@id/img_menu_item"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_delete"
            app:layout_constraintWidth_percent="0.48" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_small"
            android:text="@string/del"
            android:background="@drawable/button_error"
            android:textColor="@color/text_on_primary"
            android:textSize="@dimen/text_size_secondary"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/spacing_small"
            app:layout_constraintTop_toBottomOf="@id/img_menu_item"
            app:layout_constraintStart_toEndOf="@id/btn_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.48" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

