<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/content_background_pattern">

    <!-- Header -->
    <View
        android:id="@+id/header_background"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/header_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/btn_back"
        android:layout_width="99dp"
        android:layout_height="52dp"
        android:background="@android:color/transparent"
        android:gravity="start|center_vertical"
        android:padding="@dimen/spacing_medium"
        android:text="â† Back"
        android:textAppearance="@style/TextAppearance.App.Body"
        android:textColor="@color/text_on_primary"
        app:layout_constraintBottom_toBottomOf="@id/header_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/header_background" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/reservations"
        android:textAppearance="@style/TextAppearance.App.Headline"
        android:textColor="@color/text_on_primary"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/header_background"
        app:layout_constraintBottom_toBottomOf="@id/header_background"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintEnd_toStartOf="@id/spacer_right" />

    <!-- Spacer to balance the header -->
    <View
        android:id="@+id/spacer_right"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@id/header_background"
        app:layout_constraintBottom_toBottomOf="@id/header_background"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Date Selector -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/date_selector"
        android:layout_width="0dp"
        android:layout_height="@dimen/input_height"
        android:background="@drawable/input_background_visible"
        android:paddingStart="@dimen/spacing_medium"
        android:paddingEnd="@dimen/spacing_medium"
        android:layout_margin="@dimen/spacing_medium"
        app:layout_constraintTop_toBottomOf="@id/header_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.95">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/today_date"
            android:textAppearance="@style/TextAppearance.App.Body"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_date_icon" />

        <TextView
            android:id="@+id/tv_date_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“…"
            android:textSize="@dimen/text_size_body"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="@string/search_by_name"
        android:paddingStart="@dimen/spacing_medium"
        android:paddingEnd="@dimen/spacing_medium"
        android:background="@drawable/input_background_visible"
        android:textAppearance="@style/TextAppearance.App.Body"
        android:inputType="text"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_medium"
        app:layout_constraintTop_toBottomOf="@id/date_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.95" />

    <!-- Today's Reservations Title -->
    <TextView
        android:id="@+id/tv_reservations_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Today's Reservations (8)"
        android:textAppearance="@style/TextAppearance.App.Headline"
        android:paddingStart="@dimen/spacing_medium"
        android:paddingEnd="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_medium"
        app:layout_constraintTop_toBottomOf="@id/et_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.95" />

    <!-- Reservations List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_reservations"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="@dimen/spacing_medium"
        android:paddingBottom="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_small"
        app:layout_constraintTop_toBottomOf="@id/tv_reservations_title"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Bottom Navigation Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_nav_height"
        android:background="@drawable/bottom_nav_background"
        android:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/home"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.App.Secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/nav_menu"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/nav_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/menu"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.App.Secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/nav_home"
            app:layout_constraintEnd_toStartOf="@id/nav_bookings"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/nav_bookings"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/bookings"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.App.Secondary"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:background="@drawable/nav_item_selected"
            android:layout_margin="@dimen/spacing_tiny"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/nav_menu"
            app:layout_constraintEnd_toStartOf="@id/nav_settings"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/nav_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/settings"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.App.Secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/nav_bookings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.25" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
