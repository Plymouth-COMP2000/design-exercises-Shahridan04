<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Subtle Gradient Background for content areas -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#F8F9FA"
                android:centerColor="#FAFBFC"
                android:endColor="#FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Decorative Pattern -->
    <item
        android:top="-50dp"
        android:right="-50dp">
        <shape android:shape="oval">
            <solid android:color="#11667eea" />
            <size
                android:width="150dp"
                android:height="150dp" />
        </shape>
    </item>
</layer-list>

